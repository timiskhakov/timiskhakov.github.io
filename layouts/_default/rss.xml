{{- $pages := where site.RegularPages "Type" "in" site.Params.mainSections -}}
{{- if eq .Kind "home" -}}
  {{- $pages = where site.RegularPages "Section" "posts" -}}
{{- end -}}
{{- $limit := site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
  {{- $pages = $pages | first $limit -}}
{{- else -}}
  {{- $pages = $pages | first 10 -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<feed xmlns="http://www.w3.org/2005/Atom">
  <generator uri="https://gohugo.io/" version="{{ hugo.Version }}">Hugo</generator>
  {{- with .OutputFormats.Get "RSS" }}
  <link href="{{ .Permalink }}" rel="self" type="application/atom+xml"/>
  {{- end }}
  <link href="{{ .Permalink }}" rel="alternate" type="text/html"/>
  <id>{{ .Permalink }}</id>
  <title type="html">{{ .Site.Title }}</title>
  {{- with .Site.Params.description }}
  <subtitle type="html">{{ . }}</subtitle>
  {{- end }}
  {{- if not .Date.IsZero }}
  <updated>{{ .Date.Format "2006-01-02T15:04:05-07:00" }}</updated>
  {{- else }}
  {{- with $pages }}
  <updated>{{ (index $pages 0).Date.Format "2006-01-02T15:04:05-07:00" }}</updated>
  {{- end }}
  {{- end }}
  {{- range $pages }}
  <entry>
    <title type="html">{{ .Title }}</title>
    <link href="{{ .Permalink }}" rel="alternate" type="text/html" title="{{ .Title }}"/>
    <published>{{ .Date.Format "2006-01-02T15:04:05-07:00" }}</published>
    {{- if .Lastmod }}
    <updated>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" }}</updated>
    {{- else }}
    <updated>{{ .Date.Format "2006-01-02T15:04:05-07:00" }}</updated>
    {{- end }}
    <id>{{ .Permalink }}</id>
    <content type="html" xml:base="{{ .Permalink }}">{{ .Content | html }}</content>
    <author>
      <name/>
    </author>
    {{- range .Params.tags }}
    <category term="{{ . }}"/>
    {{- end }}
    {{- with .Params.excerpt }}
    <summary type="html">{{ . }}</summary>
    {{- else }}
    <summary type="html">{{ .Summary | html }}</summary>
    {{- end }}
  </entry>
  {{- end }}
</feed>
